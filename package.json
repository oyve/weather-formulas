{
  "name": "weather-formulas",
  "version": "1.0.8",
  "description": "A collection of atmospheric, meteorological weather calculations",
  "type": "module",
  "main": "dist/cjs/index.cjs",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/cjs/index.cjs",
      "import": "./dist/esm/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./airDensity": {
      "require": "./dist/cjs/formulas/airDensity.cjs",
      "import": "./dist/esm/formulas/airDensity.js",
      "types": "./dist/types/formulas/airDensity.d.ts"
    },
    "./diurnalRythm": {
      "require": "./dist/cjs/formulas/diurnalRythm.cjs",
      "import": "./dist/esm/formulas/diurnalRythm.js",
      "types": "./dist/types/formulas/diurnalRythm.d.ts"
    },
    "./humidity": {
      "require": "./dist/cjs/formulas/humidity.cjs",
      "import": "./dist/esm/formulas/humidity.js",
      "types": "./dist/types/formulas/humidity.d.ts"
    },
    "./pressure": {
      "require": "./dist/cjs/formulas/pressure.cjs",
      "import": "./dist/esm/formulas/pressure.js",
      "types": "./dist/types/formulas/pressure.d.ts"
    },
    "./temperature": {
      "require": "./dist/cjs/formulas/temperature.cjs",
      "import": "./dist/esm/formulas/temperature.js",
      "types": "./dist/types/formulas/temperature.d.ts"
    },
    "./wind": {
      "require": "./dist/cjs/formulas/wind.cjs",
      "import": "./dist/esm/formulas/wind.js",
      "types": "./dist/types/formulas/wind.d.ts"
    },
    "./beaufort": {
      "require": "./dist/cjs/scales/beaufort.cjs",
      "import": "./dist/esm/scales/beaufort.js",
      "types": "./dist/types/scales/beaufort.d.ts"
    },
    "./saffirSimpson": {
      "require": "./dist/cjs/scales/saffirSimpson.cjs",
      "import": "./dist/esm/scales/saffirSimpson.js",
      "types": "./dist/types/scales/saffirSimpson.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && tsc --project tsconfig.cjs.json && node scripts/rename-cjs-files.cjs && node scripts/add-js-extensions.cjs && node scripts/generate-exports.cjs",
    "watch": "tsc --watch",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oyve/weather-formulas.git"
  },
  "keywords": [
    "weather",
    "atmospheric",
    "meteorological",
    "formulas",
    "calculations",
    "temperature",
    "dew point",
    "wind chill",
    "heat index",
    "humidex",
    "relative humidity",
    "specific humidity",
    "vapor pressure",
    "potential temperature",
    "virtual temperature",
    "pressure altitude",
    "density altitude",
    "barometric formula",
    "adjust pressure to sea level",
    "lapse rate",
    "dynamic lapse rate",
    "temperature inversion",
    "weighted average temperature",
    "air density",
    "wind speed",
    "wind direction",
    "barometer"
  ],
  "author": "Ã˜yvind Hansen <oyve-github@outlook.com>",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/oyve/weather-formulas/issues"
  },
  "homepage": "https://github.com/oyve/weather-formulas#readme",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}